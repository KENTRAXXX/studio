
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isRole(role) {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userRole == role;
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      // Allow authenticated owners to update their own profile fields safely
      allow update: if request.auth.uid == userId || isRole('ADMIN');
      allow delete: if isRole('ADMIN');
    }

    match /stores/{storeId} {
      allow read;
      allow write: if request.auth.uid == storeId || isRole('ADMIN');

      match /products/{productId} {
        allow read;
        allow write: if request.auth.uid == storeId || isRole('ADMIN');
      }
      
      match /orders/{orderId} {
        allow read: if request.auth.uid == storeId || isRole('ADMIN');
        allow create: if true; // Allow customers to create orders
      }
    }
    
    match /Pending_Master_Catalog/{productId} {
        allow read: if isRole('ADMIN') || (request.auth != null && resource.data.vendorId == request.auth.uid);
        allow create: if request.auth != null && (isRole('SELLER') || isRole('MOGUL'));
        allow update: if isRole('ADMIN');
    }
    
    match /Master_Catalog/{productId} {
        allow read: if request.auth != null;
        allow write: if isRole('ADMIN');
    }
    
     match /Training_Modules/{moduleId} {
        allow read: if request.auth != null;
        allow write: if isRole('ADMIN');
    }

    match /payouts_pending/{payoutId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isRole('ADMIN'));
      allow create: if false; 
      allow update: if isRole('ADMIN');
    }
    
     match /payouts_completed/{payoutId} {
      allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isRole('ADMIN'));
      allow create: if false; 
    }
    
    match /revenue_logs/{revenueId} {
        allow read: if isRole('ADMIN');
        allow create: if false; 
    }
    
    match /withdrawal_requests/{reqId} {
        allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
        allow read: if request.auth != null && (request.auth.uid == resource.data.userId || isRole('ADMIN'));
        allow update: if isRole('ADMIN');
    }
    
    match /admin_alerts/{alertId} {
        allow read: if isRole('ADMIN');
        allow write: if true; 
    }

    match /webhook_logs/{logId} {
        allow read: if isRole('ADMIN');
        allow create: if true; // Webhook function hits this
    }
  }
}
