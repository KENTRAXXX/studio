rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Global Helper Functions ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isExistingTicketOwner() {
      return isSignedIn() && resource.data.get('customerId', null) == request.auth.uid;
    }

    // --- Collection Rules ---

    match /stores/{storeId}/supportTickets/{supportTicketId} {
      
      // Customers can see their own tickets
      allow get: if isExistingTicketOwner();
      
      // Customers can list their own tickets
      allow list: if isSignedIn() && request.query.limit <= 50; 

      // Anyone can create a ticket, but must link UID if signed in
      allow create: if request.resource.data.storeId == storeId 
                    && (request.resource.data.get('customerId', null) == null || isOwner(request.resource.data.customerId));

      // Only the owner can update (add messages) or delete their ticket
      allow update, delete: if isExistingTicketOwner();
    }

    // Platform rules for users and other collections
    match /users/{userId} {
      allow get: if true;
      allow write: if isOwner(userId);
    }

    match /stores/{userId} {
      // Allow public read (get and list) so boutiques can be resolved by slug/domain
      allow read: if true;
      allow write: if isOwner(userId);
      
      match /products/{productId} {
        allow get: if true;
        allow write: if isOwner(userId);
      }
      
      match /orders/{orderId} {
        allow read, write: if isOwner(userId);
      }
    }

    match /Master_Catalog/{productId} {
      allow read: if true;
      allow write: if isSignedIn(); // Admin specific checks usually go here
    }
    
    match /Pending_Master_Catalog/{productId} {
      allow read, write: if isSignedIn();
    }

    match /concierge_tickets/{ticketId} {
      allow read, write: if isSignedIn();
    }

    match /payouts_pending/{payoutId} {
      allow read, write: if isSignedIn();
    }
    
    match /payouts_completed/{payoutId} {
      allow read, write: if isSignedIn();
    }

    match /revenue_logs/{logId} {
      allow read, write: if isSignedIn();
    }

    match /withdrawal_requests/{reqId} {
      allow read, write: if isSignedIn();
    }
  }
}