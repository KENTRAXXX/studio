
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    function isRole(role) {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userRole == role;
    }

    function isTier(tier) {
      return isAuthenticated() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.planTier == tier;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isOwner(userId);
      // Allow authenticated owners to update their own profile fields safely
      allow update: if isOwner(userId) || isRole('ADMIN');
      allow delete: if isRole('ADMIN');
    }

    match /stores/{storeId} {
      allow read;
      // Owners can manage their own store configuration
      allow write: if isOwner(storeId) || isRole('ADMIN');

      match /products/{productId} {
        allow read;
        // Owners (including SCALER and ENTERPRISE tiers) can manage their boutique inventory
        // This authorizes the 'Deep Copy' synchronization from the Master Catalog
        allow write: if isOwner(storeId) || isRole('ADMIN');
      }
      
      match /orders/{orderId} {
        allow read: if isOwner(storeId) || isRole('ADMIN');
        allow create: if true; // Allow customers to create orders
      }

      match /traffic_logs/{logId} {
        allow read: if isOwner(storeId) || isRole('ADMIN');
        allow create: if true; 
      }
    }
    
    match /Pending_Master_Catalog/{productId} {
        allow read: if isRole('ADMIN') || (isAuthenticated() && resource.data.vendorId == request.auth.uid);
        allow create: if isAuthenticated() && (isRole('SELLER') || isRole('MOGUL'));
        allow update: if isRole('ADMIN');
    }
    
    match /Master_Catalog/{productId} {
        allow read: if isAuthenticated();
        allow write: if isRole('ADMIN');
    }
    
     match /Training_Modules/{moduleId} {
        allow read: if isAuthenticated();
        allow write: if isRole('ADMIN');
    }

    match /payouts_pending/{payoutId} {
      allow read: if isAuthenticated() && (request.auth.uid == resource.data.userId || isRole('ADMIN'));
      allow create: if false; 
      allow update: if isRole('ADMIN');
    }
    
     match /payouts_completed/{payoutId} {
      allow read: if isAuthenticated() && (request.auth.uid == resource.data.userId || isRole('ADMIN'));
      allow create: if false; 
    }
    
    match /revenue_logs/{revenueId} {
        allow read: if isRole('ADMIN');
        allow create: if false; 
    }
    
    match /withdrawal_requests/{reqId} {
        allow create: if isAuthenticated() && request.auth.uid == request.resource.data.userId;
        allow read: if isAuthenticated() && (request.auth.uid == resource.data.userId || isRole('ADMIN'));
        allow update: if isRole('ADMIN');
    }
    
    match /admin_alerts/{alertId} {
        allow read: if isRole('ADMIN');
        allow write: if true; 
    }

    match /webhook_logs/{logId} {
        allow read: if isRole('ADMIN');
        allow create: if true; 
    }

    match /concierge_tickets/{ticketId} {
        allow create: if isAuthenticated() && request.auth.uid == request.resource.data.brandId;
        allow read: if isAuthenticated() && (request.auth.uid == resource.data.brandId || isRole('ADMIN'));
        allow update: if isRole('ADMIN');
    }

    match /platform_metadata/{docId} {
        allow read, write: if isRole('ADMIN');
    }
  }
}
