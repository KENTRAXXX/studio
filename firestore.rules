
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isRole(role) {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.userRole == role;
    }

    function userCanUpdateProfile(userId) {
      let isOwner = request.auth.uid == userId;
      
      // We check that sensitive fields are not modified by the user directly,
      // EXCEPT when they are being set for the first time during the onboarding/payment finalization process.
      // We use the safe get() with default values to prevent crashes if fields are missing.
      
      let emailUnchanged = request.resource.data.get('email', resource.data.get('email', '')) == resource.data.get('email', '');
      let referralCodeUnchanged = request.resource.data.get('referralCode', resource.data.get('referralCode', '')) == resource.data.get('referralCode', '');
      let isDisabledUnchanged = request.resource.data.get('isDisabled', resource.data.get('isDisabled', false)) == resource.data.get('isDisabled', false);
      let referredByUnchanged = request.resource.data.get('referredBy', resource.data.get('referredBy', '')) == resource.data.get('referredBy', '');

      return isOwner && emailUnchanged && referralCodeUnchanged && isDisabledUnchanged && referredByUnchanged;
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth.uid == userId;
      allow update: if userCanUpdateProfile(userId);
      allow write: if isRole('ADMIN');
    }

    match /stores/{storeId} {
      allow read;
      allow write: if request.auth.uid == storeId;

      match /products/{productId} {
        allow read;
        allow write: if request.auth.uid == storeId;
      }
      
      match /orders/{orderId} {
        allow read: if request.auth.uid == storeId;
        allow create: if false; 
      }
    }
    
    match /Pending_Master_Catalog/{productId} {
        allow read: if isRole('ADMIN');
        allow create: if isRole('SELLER');
        allow update: if isRole('ADMIN');
    }
    
    match /Master_Catalog/{productId} {
        allow read: if request.auth != null;
        allow write: if isRole('ADMIN');
    }
    
     match /Training_Modules/{moduleId} {
        allow read: if request.auth != null;
        allow write: if isRole('ADMIN');
    }

    match /payouts_pending/{payoutId} {
      allow read: if request.auth.uid == resource.data.userId || isRole('ADMIN');
      allow create: if false; 
      allow update: if isRole('ADMIN');
    }
    
     match /payouts_completed/{payoutId} {
      allow read: if request.auth.uid == resource.data.userId || isRole('ADMIN');
      allow create: if false; 
    }
    
    match /revenue_logs/{revenueId} {
        allow read: if isRole('ADMIN');
        allow create: if false; 
    }
    
    match /withdrawal_requests/{reqId} {
        allow create: if request.auth.uid == request.resource.data.userId;
        allow read: if request.auth.uid == request.resource.data.userId || isRole('ADMIN');
        allow update: if isRole('ADMIN');
    }
    
    match /admin_alerts/{alertId} {
        allow read: if isRole('ADMIN');
        allow write: if true; 
    }
  }
}
