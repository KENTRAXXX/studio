
{
  "entities": {
    "SupportTicket": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "SupportTicket",
      "type": "object",
      "description": "Represents a strategic support inquiry between a customer and a boutique curator.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the support ticket."
        },
        "subject": {
          "type": "string",
          "description": "The subject line of the inquiry."
        },
        "message": {
          "type": "string",
          "description": "The initial message content."
        },
        "status": {
          "type": "string",
          "enum": [
            "OPEN",
            "RESOLVED"
          ],
          "description": "The current status of the inquiry thread."
        },
        "storeId": {
          "type": "string",
          "description": "Relation to the specific store where the inquiry was made."
        },
        "customerId": {
          "type": "string",
          "description": "Optional relation to a registered customer account."
        },
        "messages": {
          "type": "array",
          "description": "The persistent conversation thread.",
          "items": {
            "type": "string"
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "id",
        "subject",
        "message",
        "status",
        "storeId",
        "messages"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/stores/{storeId}/supportTickets/{supportTicketId}",
        "definition": {
          "entityName": "SupportTicket",
          "schema": {
            "$ref": "#/backend/entities/SupportTicket"
          },
          "description": "Threaded communication records isolated per boutique."
        }
      }
    ]
  }
}
